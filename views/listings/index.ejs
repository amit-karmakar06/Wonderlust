<% layout("/Layouts/boilerplate") %>
<body>
  <h3>All listings</h3>

  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1" style="width: 100%;">

    <% for (let listing of alllistings) { 

    if (listing.title && listing.price && listing.image && listing.image.url) { %>       
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card" style="width: 18rem;">
        
          <% if (listing.image && listing.image.url) { %>
            <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing-image">
            <div class="card-img-overlay"></div>
          <% } else { %>
            <img src="default-image.jpg" class="card-img-top" alt="default listing image">
          <% } %>
        
          <div class="card-body">
            <p class="card-text">
             <b><%= listing.title%></b> <br>
              <!-- <%= listing.description %> <br> -->
              &#8377; <%= listing.price%> /night</p>
            </p>
          </div>
        </div>
        </a>
    <% }} %>
  </div>
</body>
