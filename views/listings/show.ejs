<% layout("/Layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2 mt-3">
    <h3>All listings details:</h3>

    <div class="card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="..."
      />
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></b>
            <%= listing.description %> <br>
            &#8377; <%= listing.price%> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
      </div>
    </div>
    <a class="btn btn-dark col-1" style="border: none;" href="/listings/<%= listing._id %>/edit">Edit</a>
    <br />
    <br />
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
      <button class="btn btn-dark dlt-btn mb-2">Delete Post</button> <br><br><br><br><br><br><br>
    </form>
  </div>
</div>
